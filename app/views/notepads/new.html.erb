<h1>新規投稿</h1>
<% if @notepad.errors.any? %>
  <%= @notepad.errors.count %>件のエラーが発生しました
  <ul>
    <% @notepad.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @notepad, url: '/notepads', method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :content %>

  <%= f.submit '投稿' %>
<% end %>
